<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 .offset-md-4">

      <h1>New Igredient</h1>

      <% if @dose.errors.any? %>
      <% @dose.errors.full_messages.each do |message| %>
      <p><%= message %></p>
      <% end %>
      <% end %>

      <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :description, placeholder: "1 ml - 30% - 20 cl - A lot" %>
      <%= f.association :ingredient, class: "form-control" %>
      <%= f.submit "Add ingredient", class: 'btn btn-dark'%>
      <% end %>

    </div>
  </div>
  <br>
  <br>
  <br>
<%= link_to "back", cocktail_path(@cocktail), class: 'btn btn-secondary' %>
</div>

