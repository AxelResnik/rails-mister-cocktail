<h1>Create a new cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <form class="form-inline">
        <div class="form-group mb-2">
          <%= simple_form_for [@cocktail] do |f| %>
          <%= f.input :name, class: "form-control", placeholder: "Whisky on the rocks" %>
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <%= f.submit "Lets drink!", class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
<br>
<br>
<%= link_to 'back', cocktails_path, class: 'btn btn-dark' %>
