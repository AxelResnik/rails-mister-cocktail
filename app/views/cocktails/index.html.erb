<%= render 'Shared/banner' %>

<div class="container">
    <h1>Cocktails</h1>
  <div class="row">
      <% @cocktails.each do |cocktail| %>
    <div class="col-md-4 col-sm-6">
      <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: 'text-decoration-none text-white' %>
      </div>
      </div>
      <% end %>
    </div>
  </div>

