<%= render 'Shared/banner' %>

<div class="container">
    <h1>Cocktails</h1>
  <div class="row">
    <div class="col-md-8 .offset-md-4">
      <% @cocktails.each do |cocktail| %>
      <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
      <% end %>
    </div>
  </div>
</div>

