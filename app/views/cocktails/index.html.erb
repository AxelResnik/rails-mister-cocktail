<%= render 'Shared/banner' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 offset-sm-3 col-md-6 offset-md-3">
      <h1>Cocktails</h1>
      <% @cocktails.each do |cocktail| %>
      <div lass="card" style="width: 18rem;">
        <img src="https://img.freepik.com/free-vector/hand-drawn-cocktail-collection_23-2147825326.jpg?size=338&ext=jpg" alt="" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <%= link_to 'delete', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
      <%= link_to "New cocktail", new_cocktail_path %>
    </div>
  </div>
</div>
